@model MarcaViewModel

<div class="row">
    @foreach (var marca in Model.Marcas)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@marca.nome</h5>
                    <p class="card-text">Código: @marca.codigo</p>
                    <button type="button" class="btn btn-primary"
                            data-toggle="modal"
                            data-target="#modelos"
                            data-id="@marca.codigo"
                            data-nome="@marca.nome"
                            onclick="showModal(event)">
                        Ver Detalhes
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0);" onclick="loadPage(@(Model.CurrentPage - 1))">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="javascript:void(0);" onclick="loadPage(@i)">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0);" onclick="loadPage(@(Model.CurrentPage + 1))">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
